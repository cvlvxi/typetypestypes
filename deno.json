{
    "compilerOptions": {
      "allowJs": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "inlineSourceMap": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["deno.window"],
      "module": "esnext",
      "strict": true,
      "target": "esnext",
      "sourceMap": true,
      "outDir": "out",
      "useDefineForClassFields": true
    },
    "fmt": {
      "options": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "singleQuote": true,
        "proseWrap": "preserve"
      }
    }
  }
